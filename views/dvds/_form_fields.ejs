<div class="form-row">
  <div class="form-item">
    <label>Title</label>
    <input type="text" name="title" value="<%= dvd.title %>">
  </div>
  <div class="form-item">
    <label>Actors</label>
    <input type="text" name="actors" value="<%= dvd.actors %>">
  </div>
</div>

<div class="form-row">
  <div class="form-item">
    <label>Director</label>
    <input type="text" name="director" value="<%= dvd.director %>">
  </div>
  <div class="form-item">
    <label>Publish Date</label>
    <input type="date" name="publishDate"
      value="<%= dvd.publishDate == null ? '' : dvd.publishDate.toISOString().split('T')[0] %>">
  </div>
</div>

<div class="form-row">
  <div class="form-item">
    <label>Duration</label>
    <input type="number" name="duration" min="1" value="<%= dvd.duration %>">
  </div>
  <div class="form-item form-item-no-grow">
    <label>Cover</label>
    <input type="file" name="cover" class="dvd-cover filepond">
  </div>
</div>

<div class="form-row">
  <div class="form-item">
    <label>Category</label>
    <input type="text" name="category" value="<%= dvd.category %>">
  </div>
  <div class="form-item">
    <label>Dubs</label>
    <input type="text" name="dubs" value="<%= dvd.dubs %>">
  </div>
  <div class="form-item">
    <label>Subtitles</label>
    <input type="text" name="subtitles" value="<%= dvd.subtitles %>">
  </div>
</div>

<div class="form-row">
  <div class="form-item">
    <label>In Stock:</label>
    <input type="number" name="inStock" value="<%= dvd.inStock %>">
  </div>
  <div class="form-item">
    <label>Price</label>
    <input type="number" step="0.01" name="price" value="<%= dvd.price %>">
  </div>
</div>